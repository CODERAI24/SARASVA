{
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": {
    "public": "firebase-public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/SARASVA/manifest.webmanifest",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
        ]
      },
      {
        "source": "/SARASVA/logo.png",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
        ]
      },
      {
        "source": "/SARASVA/sw.js",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
        ]
      }
    ],
    "redirects": [
      { "source": "/", "destination": "/SARASVA/", "type": 301 }
    ],
    "rewrites": [
      {
        "source": "/SARASVA/**",
        "destination": "/SARASVA/index.html"
      }
    ]
  }
}
